#ifndef CLOCK_H
#define CLOCK_H

#include "PmodRTCC.h"

// Function to initialize the clock module
void Clock_Init();

// Function to get the current time from the clock
Time Clock_GetTime(RTCC_Target target);

// Function to set an alarm on the clock
void Clock_SetAlarm0(Time alarmTime);

void Clock_SetAlarm1(Time alarmTime);

#endif // CLOCK_H

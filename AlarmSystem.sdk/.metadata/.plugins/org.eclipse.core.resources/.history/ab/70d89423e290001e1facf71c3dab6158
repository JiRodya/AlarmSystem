#ifndef CLOCK_H
#define CLOCK_H

#include <stdint.h>

// Function to initialize the clock
void clock_init();

// Function to set the alarm time (in hours, minutes, and seconds)
void set_alarm(uint8_t hours, uint8_t minutes, uint8_t seconds);

// Function to check if the alarm is triggered
int is_alarm_triggered();

// Function to update the clock time (should be called periodically)
void update_clock();

// Function to get the current hour
uint8_t get_current_hour();

// Function to get the current minute
uint8_t get_current_minute();

// Function to get the current second
uint8_t get_current_second();

#endif

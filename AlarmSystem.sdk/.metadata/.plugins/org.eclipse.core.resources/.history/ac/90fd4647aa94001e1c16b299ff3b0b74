#ifndef OLED_H
#define OLED_h

#include <stdint.h>
#include "PmodOLED.h"

// Constants for section dimensions
#define TIME_SECTION_X 0
#define TIME_SECTION_Y 0
#define TIME_SECTION_WIDTH 64
#define TIME_SECTION_HEIGHT 16

#define DATE_SECTION_X 0
#define DATE_SECTION_Y 16
#define DATE_SECTION_WIDTH 128
#define DATE_SECTION_HEIGHT 16

#define INFO_SECTION_X 64
#define INFO_SECTION_Y 0
#define INFO_SECTION_WIDTH 64
#define INFO_SECTION_HEIGHT 16

enum bitmaps{ALARM, TIME};
void OLED_Initialize();

void OLED_ClearDisplay();
void OLED_Terminate();


void OLED_DisplayDate( int day, int month, int year);
void OLED_DisplayTime(int hour, int minute, int second );
void OLED_DisplayIcons( enum bitmaps choice);

void OLED_DisplayMsg(char* msg, int x, int y);


#endif
